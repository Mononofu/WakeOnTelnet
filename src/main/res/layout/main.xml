<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">

  <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textview" 
    	    android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>

	<LinearLayout
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">

		<Button   android:id="@+id/alarmbtn"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
					    android:layout_weight="1"
				    android:text="Schedule alarm" />

		<Button   android:id="@+id/alarmlistbtn"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
					    android:layout_weight="1"
				    android:text="Display alarms" />

		<Button   android:id="@+id/alarmcancelbtn"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
					    android:layout_weight="1"
				    android:text="Cancel all" />
				 
  </LinearLayout>

  <LinearLayout
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:paddingBottom="40dip" >

			<Button   android:id="@+id/mutebtn"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="25"
					    android:text="Mute" />

		    <Button   android:id="@+id/onbtn"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="25"
					    android:text="Off" />

		    <Button   android:id="@+id/tunerbtn"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="25"
					    android:text="Tuner" />

		    <Button   android:id="@+id/laptopbtn"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="25"
					    android:text="Laptop" />
  </LinearLayout>




	<LinearLayout
       android:orientation="horizontal"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">

	       <TextView android:id="@+id/voldisplay"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingRight="5dip"
			    android:layout_weight="1"
    	        android:gravity="center_horizontal|center_vertical"
		        android:text="vol: -40"/>

		    <Button   android:id="@+id/btn"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			    android:layout_weight="1"
		    android:text="Change volume"/>
  	</LinearLayout>

  	<SeekBar  android:id="@+id/seekview"
				    android:layout_width="fill_parent"
				    android:max="100"
		            android:progress="50"
    	    	    android:gravity="center_vertical"
				    android:layout_height="30dip" />

	<LinearLayout
	       android:orientation="horizontal"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:paddingTop="40dip" >

		    <TextView android:id="@+id/sleeptime"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingRight="5dip"
			    android:layout_weight="1"
    	        android:gravity="center_horizontal|center_vertical"
		        android:text="10 minutes" />

		    <Button   android:id="@+id/sleepbtn"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="Sleep now" />

  	</LinearLayout>

  	<SeekBar  android:id="@+id/sleepbar"
				    android:layout_width="fill_parent"
				    android:max="60"
		            android:progress="10"
    	    	    android:gravity="center_vertical"
				    android:layout_height="30dip" />

</LinearLayout>
